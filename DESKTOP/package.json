{
  "name": "obh-desktop-system",
  "version": "1.0.0",
  "description": "OBH Desktop System Application",
  "main": "index.js",
  "homepage": "./",
  "scripts": {
    "start": "concurrently \"npm run start:server\" \"npm run start:electron\"",
    "start:server": "nodemon src/backend/server.js",
    "start:electron": "electron .",
    "dev": "electronmon .",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac",
    "build-linux": "electron-builder --linux",
    "build-all": "electron-builder -wml",
    "dist": "npm run build",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.obh.desktop",
    "productName": "OBH Desktop System",
    "copyright": "Copyright Â© 2025 OBH System",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "index.js",
      "src/**/*",
      "package.json",
      "node_modules/**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.log",
      "!**/.git/**/*",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "icon": "build/icons/icon.ico",
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "OBH Desktop System"
    },
    "mac": {
      "target": "dmg",
      "category": "public.app-category.productivity"
    },
    "linux": {
      "target": "AppImage",
      "category": "Office"
    },
    "publish": {
      "provider": "github",
      "releaseType": "release"
    }
  },
  "keywords": [
    "obh",
    "desktop",
    "electron",
    "system"
  ],
  "author": {
    "name": "Leo",
    "email": "chavezleo518@gmail.com"
  },
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "concurrently": "^9.2.1",
    "electron": "^38.4.0",
    "electron-builder": "^24.13.3",
    "electron-reload": "^2.0.0-alpha.1",
    "electronmon": "^2.0.3",
    "nodemon": "^3.1.10"
  },
  "dependencies": {
    "@picocss/pico": "^2.1.1",
    "@supabase/supabase-js": "^2.78.0",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "google-auth-library": "^10.4.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.6",
    "pg": "^8.16.3",
    "socket.io": "^4.8.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/leoidk21/SampleElectron.git"
  },
  "bugs": {
    "url": "https://github.com/leoidk21/SampleElectron/issues"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
